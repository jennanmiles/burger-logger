<h1>Eat Da Burger !</h1>

<img class="burger-icon" src="/assets/img/burger.png">

<div class="burgerWrapper">
    <ul>
        <h2>Burgers You Wanna Eat</h2>
        {{#each burgers}}
            {{#unless devoured}}
                <li>{{burger_name}}
                    <button data-id="{{this.id}}" class="minibutton">Devour!</button>
                </li>
            {{/unless}}
        {{/each}}
    </ul>

    <ul>
        <h2>Burgers You Ate</h2>
        {{#each burgers}}
            {{#if devoured}}
                <li>{{ burger_name }}</li>
            {{/if}}
        {{/each}}
    </ul>
</div>

<form class="burger-entry">
    <input type="textarea" id="newBurger" name="burger-name"></input>
    <button type="submit" class="addBurger">Add Burger</button>
    <p>Enter a burger you want to eat by clicking the submit button.</p>
</form>